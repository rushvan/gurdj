    , bsConsensusState :: ConsensusState
    } deriving (Show, Generic, FromJSON, ToJSON)

-- Configuration

data BlockchainConfig = BlockchainConfig
    { cfgBlockTime :: Integer
    , cfgEpochLength :: Integer
    , cfgMinStake :: Integer
