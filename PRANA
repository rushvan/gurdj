{-# LANGUAGE DataKinds     #-}

{-# LANGUAGE NoImplicitPrelude #-}

{-# LANGUAGE TemplateHaskell  #-}

{-# LANGUAGE ScopedTypeVariables #-}

{-# LANGUAGE TypeApplications  #-}

