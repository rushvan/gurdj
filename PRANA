data MMR = MMR
 { mmrPeaks :: Massiv.Array Massiv.U Massiv.Ix1 ByteString
 , mmrLeaves :: IT.IntervalTree POSIXTime ByteString
 } deriving (Show, Generic, FromJSON, ToJSON)

