    { txOutputAddress :: Address
    , txOutputValue :: Integer
    } deriving (Show, Generic, FromJSON, ToJSON)

data ConsensusState = ConsensusState
    { csValidators :: Map.Map PubKeyHash Integer  -- PubKeyHash -> Stake
    , csEpoch :: Integer
    , csTotalStake :: Integer
    } deriving (Show, Generic, FromJSON, ToJSON)

