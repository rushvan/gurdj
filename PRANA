    { stakingDRep   :: DRep
    , stakingAmount :: Integer
    }
PlutusTx.unstableMakeIsData ''Staking

-- Helper functions

createDRep :: Integer -> BuiltinByteString -> Integer -> DRep
createDRep = DRep

